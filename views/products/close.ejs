                <div class="card shadow">
                    <div class="card-body">
    
        <form action="/products/<%=product._id%>?_method=PUT" method="POST">

        
        
        
        
        
        <div class="mb-3">
            <label class="form-label" for="closing">New closing date</label>
            <input class="form-control" type="date" id="closing" name="product[closing]" ">
        </div>

      
        <br>
        <br>
        <div>
            <button class=" btn btn-warning btn-sm">Confirm</button>
        </div>
    </form>

        </div>   

<% layout('layouts/boilerplate')%>

<div class="row">
    
<div class="col-6 offset-3">   
            <h1 class="text-center">Add a EOI for:</h1>
            <br>

            <h2 class="text-center"> <%= expression.description%></h2>

    <form action="/expressions/<%=expression._id%>/evaluations" method="POST" novalidate class = "validated-form">

    <div class="row">  
                
                <div class="mb-3 mt-3">
                        <label class="form-label" for="company">Company</label>
                        <input class="form-control" type="text" id="company" name="company" required>
                </div>
            
                    <div class="mb-3 mt-3">
                        <label class="form-label" for="country">Country</label>
                        <input class="form-control" type="text" id="country" name="country" required>
                </div>
                
                    <div class="mb-3 mt-3">
                    <label class="form-label" for="body">Message</label>
                    <input class="form-control" type="text" id="body" name="body" required>
                </div> 

              

    <button class="btn btn-primary">Add EOI</button>

   

    </form>
<br>
</div>
</div>
 
       
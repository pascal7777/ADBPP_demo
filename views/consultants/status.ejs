<% layout('layouts/boilerplate')%>

<div class="container mt-3">
    <h1>Status Change</h1>
       
        <br>
        <h3>
            Package: <%=consultant.product.name%> - <%=consultant.number%> 
        </h3>

    <div class="row">
        <div class="col-md-9">
            <div class="card shadow">
                <div class="card-body">

                    <form action="/consultants/<%=consultant._id%>?_method=PUT" method="POST" novalidate class = "validated-form">
                        <br>
                                <div class="mb-3">
                                    <label class="form-label" for="status" class="form-label">Update Package Status from 
                        
                                        <% if(consultant.status==="Scheduled" ) {%>
                                            <span style="color:rgb(48, 8, 249)">
                                                <%=consultant.status %>
                                            </span>
                                            <% } %>
                                        
                                            <% if(consultant.status==="Advertised" ) {%>
                                                <span style="color:rgb(3, 99, 10)">
                                                    <%=consultant.status %>
                                                </span>
                                                <% } %>
            
                                                    <% if(consultant.status==="Evaluation" ) {%>
                                                        <span style="color:rgb(6, 240, 18)">
                                                            <%=consultant.status %>
                                                        </span>
                                                        <% } %>
            
                                                        <% if(consultant.status==="Awarded" ) {%>
                                                            <span style="color:rgb(3, 39, 5)">
                                                                <%=consultant.status %>
                                                            </span>
                                                            <p>Before to change status to 'Awarded)' enter the contract value using Edit</p>
                                                            <% } %>
            
                                                            <% if(consultant.status==="Cancelled" ) {%>
                                                                <span style="color:rgb(251, 16, 16)">
                                                                    <%=consultant.status %>
                                                                </span>
                                                                <% } %>
            
                                                            
                                                                            to:
                                    </label>
                                    <input class="form-control" list="changestatus" name="consultant[status]" id="status" required>
                                    <datalist id="changestatus">
                                        <option value="Advertised">
                                            <option value="Evaluation">
                                                    <option value="Awarded">
                                                        <option value="Cancelled">
                                    </datalist>
                            </div>

                                <br>

                        

                        <br>
                        <br>

                        <div>
                        <button class=" btn btn-warning btn-sm">Confirm Status Change</button>
                        </div>
                    </form>


                </div>   
            </div>
        
        
            <div>
                <br>
                <a class="btn btn-primary btn-sm" href="/consultants/<%=consultant._id%>" role="button">Go Back</a></div>
        </div>
    </div>
</div>
  

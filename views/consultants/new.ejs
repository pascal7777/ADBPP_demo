<% layout('layouts/boilerplate')%>

<div class="row">
    
<div class="col-6 offset-3">   
            <h1 class="text-center">Enter new CS Package for:</h1>
            
            <h2 class="text-center"> <%= product.name%></h2>

    <form action="/products/<%=product._id%>/consultants" method="POST" novalidate class = "validated-form">

    <div class="row">  
                
                <div class="mb-3 mt-3">
                        <label class="form-label" for="number">Package Number</label>
                        <input class="form-control" type="text" id="number" name="number" required>
                </div>
                
                
                    <div class="mb-3 mt-3">
                        <label class="form-label" for="description">Package Description</label>
                        <input class="form-control" type="text" id="description" name="description" required>
                </div>
            
                
                    <div class="mb-3 mt-3">
                    <label class="form-label" for="value">Package Value</label>
                    <input class="form-control" type="number" step=".01" id="value" name="value" required>
                </div> 

                <div class="mb-3 mt-3">
                    <label class="form-label" for="method" class="form-label">Procurement Method</label>
                    <input class="form-control" list="csmethodlist" id="method" name="method" required>
                    <datalist id="csmethodlist">
                            <option value="OCBS (FTP)">
                            <option value="OCBS (STP)">
                            <option value="OCBS (LCS)">
                            <option value="CQS limited">
                            <option value="ICS">
                            <option value="Direct Contracting">
                            <option value="Other">
                    </datalist>
                </div>  
               
    </div>

    <div class="row">  
               
              
        <div class="mb-3 mt-3">
            <label class="form-label" for="sbd" class="form-label">Standard Bid Document</label>
            <input class="form-control" list="sbdlist" id="sbd" name="sbd" required>
            <datalist id="sbdlist">
            <option value="Expression of Interest">
            <option value="Standard Request for Proposal (ADB)"></option>
            </datalist>
        </div>  
        
                
                
        <div class="mb-3 mt-3">
            <label class="form-label" for="review" class="form-label">ADB Review</label>
            <input class="form-control" list="listReview" id="review" name="review" required>
            <datalist id="listReview">
                <option value="Prior">
                    <option value="Post (sample)">
            </datalist>
        </div>  

               
              
                <div class="mb-3 mt-3">
                    <label class="form-label" for="procedure">Procedure</label>
                    <input class="form-control" type="text" id="procedure" name="procedure">
                </div>  
                
    </div>  

    <div class="row">  
              
        <div class="row">  

            <div class="col-sm-6">
                    <div class="mb-3 mt-3">
                        <label class="form-label" for="advertisingQ" class="form-label">Planned for Advertising (Q)</label>
                        <input class="form-control" list="qlist" id="advertisingQ" name="advertisingQ" required>
                        <datalist id="qlist">
                            <option value="Q1">
                                <option value="Q2">
                                    <option value="Q3">
                                        <option value="Q4">
                        </datalist>
                    </div> 
            </div> 
        
            <div class="col-sm-6">
                    <div class="mb-3 mt-3">
                        <label class="form-label" for="advertisingY" class="form-label">Planned for Advertising (Y)</label>
                        <input class="form-control" list="ylist" id="advertisingY" name="advertisingY" required>
                        <datalist id="ylist">
                            <option value="2024">
                                <option value="2025">
                                    <option value="2026">
                                        <option value="2027">
                                            <option value="2028">
                                                <option value="2029">
                                                    <option value="2030">
                        </datalist>
                    </div>  
            </div> 
        
        </div> 



               
               

                <div class="col-sm-6">
                    <div class="mb-3 mt-3">
                        <label class="form-label" for="approach" class="form-label">Approach (market)</label>
                        <input class="form-control" list="listApproach" id="approach" name="approach" required>
                        <datalist id="listApproach">
                            <option value="National">
                                <option value="International">
                        </datalist>
                    </div>  
                    </div> 
                
    </div> 
    

    <button class="btn btn-primary">Add Package</button>

    </form>
<br>
</div>
</div>
 
       